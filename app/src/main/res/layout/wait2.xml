<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Number of People Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of People"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:background="#E24443"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/radioGroupPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioPeople1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />
                <RadioButton
                    android:id="@+id/radioPeople2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/radioPeople3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3" />
                <RadioButton
                    android:id="@+id/radioPeople4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />
                <RadioButton
                    android:id="@+id/radioPeople5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />
                <RadioButton
                    android:id="@+id/radioPeople6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6" />

                <RadioButton
                    android:id="@+id/radioAdultsCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom" />
            </RadioGroup>

            <EditText
                android:id="@+id/editTextCustomAdults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter number of adults"
                android:inputType="number"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Dine-in or Takeaway Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dine-in or Takeaway"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:background="#E24443"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/radioGroupDining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioDineIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dine-in"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/radioTakeaway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Takeaway" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting Notice: Please Check Before Registering"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:textColor="#808080" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. If you do not visit after registering for the waitlist, your visit may be recorded as a no-show. If recorded as a no-show, there may be restrictions on your future visits, so please make sure to check this point."
                android:padding="8dp"
                android:textColor="#808080" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. No-shows can cause inconvenience to the establishment and other customers. Therefore, please register for the waitlist only if you are sure to visit."
                android:padding="8dp"
                android:textColor="#808080" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. If you are unable to visit, please cancel the waitlist through the app."
                android:padding="8dp"
                android:textColor="#808080" />
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:background="#E24443"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>