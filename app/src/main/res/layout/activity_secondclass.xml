<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Choose your less favorite!"
        android:textStyle="bold"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false">

        <Button
            android:id="@+id/button1"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/design"
            android:backgroundTint="#E24443"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Vegan"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E24443"
            android:background="@drawable/design"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Gluten-Free"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button3"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E24443"
            android:background="@drawable/design"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Non spicy"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button4"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E24443"
            android:background="@drawable/design"
            android:fontFamily="sans-serif-smallcaps"
            android:text="No pork"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button5"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E24443"
            android:background="@drawable/design"
            android:fontFamily="sans-serif-smallcaps"
            android:text="No beef"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button6"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E24443"
            android:background="@drawable/design"
            android:fontFamily="sans-serif-smallcaps"
            android:text="No seafood"
            android:textColor="#FFFFFF" />
    </GridLayout>

    <TextView
        android:id="@+id/hyperlink_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autoLink="all"
        android:background="@drawable/design"
        android:backgroundTint="#B3ADAD"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Prepared"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>